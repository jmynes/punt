// PUNT - Kanban & Ticket Tracker Schema
// Learn more: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================================================
// Enums
// ============================================================================

enum TicketType {
  epic
  story
  task
  bug
  subtask
}

enum TicketPriority {
  lowest
  low
  medium
  high
  highest
  critical
}

enum SprintStatus {
  planning
  active
  completed
}

enum InvitationStatus {
  pending
  accepted
  expired
  revoked
}

enum InvitationRole {
  admin
  member
}

enum SprintEntryType {
  added
  carried_over
}

enum SprintExitStatus {
  completed
  carried_over
  removed
}

enum LinkType {
  blocks
  is_blocked_by
  relates_to
  duplicates
  is_duplicated_by
}

// ============================================================================
// Models
// ============================================================================

model User {
  id          String    @id @default(cuid())
  username    String    @unique
  email       String?   @unique
  name        String
  avatar      String?
  avatarColor String?   // Custom background color for fallback avatar
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  lastLoginAt DateTime?

  // Auth fields
  passwordHash      String?
  passwordChangedAt DateTime? // For session invalidation after password change
  emailVerified     DateTime?
  isSystemAdmin     Boolean   @default(false)
  isActive          Boolean   @default(true)

  // Two-factor authentication (TOTP)
  totpSecret        String?   // Encrypted TOTP secret key
  totpEnabled       Boolean   @default(false) // Whether 2FA is active
  totpRecoveryCodes Json?     // JSON array of hashed recovery codes

  // MCP API access
  mcpApiKey          String? @unique // SHA-256 hash of API key for authentication
  mcpApiKeyEncrypted String?         // Encrypted raw API key for Claude CLI chat feature

  // Claude Chat API access
  anthropicApiKey        String? // User's own Anthropic API key for embedded chat
  chatProvider           String? // Preferred chat provider: "anthropic" | "claude-cli"
  claudeSessionEncrypted String? // Encrypted Claude CLI session credentials (experimental)
  enabledMcpServers      Json?   // JSON array of enabled MCP server names from Claude CLI credentials

  // Ticket relations
  assignedTickets  Ticket[]        @relation("Assignee")
  createdTickets   Ticket[]        @relation("Creator")
  watchingTickets  TicketWatcher[]

  // Project relations
  projects         ProjectMember[]

  // Activity
  comments         Comment[]
  ticketEdits      TicketEdit[]
  ticketActivities TicketActivity[]

  // Auth relations
  sessions                Session[]
  accounts                Account[]
  sentInvitations         Invitation[]
  passwordResetTokens     PasswordResetToken[]
  emailVerificationTokens EmailVerificationToken[]

  // Sprint relations
  completedSprints Sprint[] @relation("SprintCompleter")

  // Attachment relations
  uploadedAttachments Attachment[] @relation("Uploader")

  // Chat relations
  chatSessions ChatSession[]
}

// Auth.js Account model for OAuth providers (future-proofing)
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

// Server-side session storage
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  userAgent    String?
  ipAddress    String?
  createdAt    DateTime @default(now())
  lastActive   DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expires])
}

// Rate limiting for auth endpoints
model RateLimit {
  id          String   @id @default(cuid())
  identifier  String   // IP address or user ID
  endpoint    String   // e.g., "auth/login", "auth/register"
  count       Int      @default(1)
  windowStart DateTime @default(now())

  @@unique([identifier, endpoint])
  @@index([windowStart])
}

// Project invitation tokens (link-based)
model Invitation {
  id        String           @id @default(cuid())
  email     String
  role      InvitationRole   @default(member)
  token     String           @unique @default(cuid())
  expiresAt DateTime
  status    InvitationStatus @default(pending)
  createdAt DateTime         @default(now())

  senderId  String?
  sender    User?   @relation(fields: [senderId], references: [id], onDelete: SetNull)
  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@unique([email, projectId])
  @@index([projectId])
  @@index([token])
  @@index([email])
}

model Project {
  id          String   @id @default(cuid())
  name        String
  key         String   @unique // e.g., "PUNT", "PROJ"
  description String?
  color       String   @default("#6366f1")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  showAddColumnButton Boolean? // null = inherit from global SystemSettings

  // Repository integration configuration
  repositoryUrl       String? // Repository URL (e.g., https://github.com/owner/repo)
  repositoryProvider  String? // github, gitlab, bitbucket, gitea, codeberg, other
  localPath           String? // Local filesystem path to the repo (for agent context)
  defaultBranch       String? // Default branch name (e.g., main, master)
  branchTemplate      String? // Branch naming template (e.g., "{type}/{key}-{slug}")
  agentGuidance       String? // Markdown instructions for AI agents working on this project
  monorepoPath        String? // Path within monorepo (e.g., "packages/frontend")
  environmentBranches Json?   // JSON array of {id, environment, branchName} objects
  webhookSecret       String? // Secret for verifying GitHub/GitLab webhook signatures
  commitPatterns      Json?   // JSON array of custom commit patterns for webhook processing

  columns        Column[]
  tickets        Ticket[]
  members        ProjectMember[]
  labels         Label[]
  sprints        Sprint[]
  invitations    Invitation[]
  sprintSettings ProjectSprintSettings?
  roles          Role[]
  chatSessions   ChatSession[]
}

model ProjectMember {
  id String @id @default(cuid())

  // Role relation (replaces old string role field)
  roleId String
  role   Role   @relation(fields: [roleId], references: [id], onDelete: Cascade)

  // Optional per-member permission overrides (additive to role permissions)
  // JSON array of permission strings, e.g., ["sprints.manage", "labels.manage"]
  overrides Json?

  userId    String
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, projectId])
  @@index([projectId])
  @@index([roleId])
}

// Custom roles for granular permissions (Discord/Jira-style)
model Role {
  id          String  @id @default(cuid())
  name        String // "Owner", "Admin", "Moderator", "Member", "Viewer"
  color       String  @default("#6b7280") // For UI badge display
  description String? // Optional description of what this role can do

  // JSON array of permission strings, e.g., ["tickets.create", "tickets.manage_own"]
  permissions Json @default("[]")

  // Built-in roles (Owner, Admin, Member, Viewer) cannot be deleted
  isDefault Boolean @default(false)

  // Position for display ordering (lower = higher rank)
  position Int @default(0)

  projectId String
  project   Project         @relation(fields: [projectId], references: [id], onDelete: Cascade)
  members   ProjectMember[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([projectId, name])
  @@index([projectId])
}

model Sprint {
  id        String       @id @default(cuid())
  name      String
  goal      String?
  startDate DateTime?
  endDate   DateTime?

  // Budget: expected story points capacity (optional)
  budget    Int?

  // Status replaces isActive: planning, active, completed
  status    SprintStatus @default(planning)

  // Completion tracking
  completedAt   DateTime?
  completedById String?
  completedBy   User?     @relation("SprintCompleter", fields: [completedById], references: [id], onDelete: SetNull)

  // Completion metrics (calculated at close)
  completedTicketCount   Int?
  incompleteTicketCount  Int?
  completedStoryPoints   Int?
  incompleteStoryPoints  Int?

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  tickets   Ticket[]

  // New relations
  ticketHistory    TicketSprintHistory[]
  carriedToTickets Ticket[] @relation("CarriedFrom")

  @@index([projectId])
  @@index([projectId, status])
}

model Column {
  id        String  @id @default(cuid())
  name      String
  icon      String?
  color     String?
  order     Int
  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  tickets Ticket[]

  @@index([projectId])
}

model Ticket {
  id     String @id @default(cuid())
  number Int    // Auto-increment per project (managed in app)

  // Core fields
  title       String
  description String? // Rich text / markdown body
  type        TicketType     @default(task)

  // Status & Priority
  priority TicketPriority @default(medium)
  order    Int            // Position within column

  // Estimation
  storyPoints Int?
  estimate    String? // Time estimate like "2h", "1d", "1w"

  // Dates
  startDate DateTime?
  dueDate   DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  // Resolution (for closed/done tickets)
  resolution   String? // Already Implemented, Done, Won't Fix, Duplicate, Cannot Reproduce, Incomplete, Won't Do
  resolvedAt   DateTime? // When the ticket was resolved

  // Environment / Context
  environment  String? // e.g., "Production", "Staging", "Development"
  affectedVersion String?
  fixVersion   String?

  // Relationships
  projectId  String
  project    Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  columnId   String
  column     Column  @relation(fields: [columnId], references: [id])

  // Users
  assigneeId String?
  assignee   User?   @relation("Assignee", fields: [assigneeId], references: [id], onDelete: SetNull)
  creatorId  String?
  creator    User?   @relation("Creator", fields: [creatorId], references: [id], onDelete: SetNull)

  // Sprint
  sprintId String?
  sprint   Sprint? @relation(fields: [sprintId], references: [id], onDelete: SetNull)

  // Carryover tracking
  isCarriedOver         Boolean   @default(false)
  carriedFromSprintId   String?
  carriedFromSprint     Sprint?   @relation("CarriedFrom", fields: [carriedFromSprintId], references: [id], onDelete: SetNull)
  carriedOverCount      Int       @default(0)

  // Sprint history
  sprintHistory         TicketSprintHistory[]

  // Parent ticket (for subtasks)
  parentId String?
  parent   Ticket?  @relation("Subtasks", fields: [parentId], references: [id], onDelete: SetNull)
  subtasks Ticket[] @relation("Subtasks")

  // Many-to-many
  labels      Label[]
  watchers    TicketWatcher[]
  linkedFrom  TicketLink[] @relation("LinkedFrom")
  linkedTo    TicketLink[] @relation("LinkedTo")

  // Activity
  comments    Comment[]
  editHistory TicketEdit[]
  attachments Attachment[]
  activities  TicketActivity[]

  @@unique([projectId, number])
  @@index([projectId])
  @@index([columnId])
  @@index([assigneeId])
  @@index([sprintId])
  @@index([parentId])
  @@index([carriedFromSprintId])
}

// Watchers (CC users on a ticket)
model TicketWatcher {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  ticketId String
  ticket   Ticket @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  userId   String
  user     User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([ticketId, userId])
  @@index([ticketId])
  @@index([userId])
}

// Linked tickets (blocks, is blocked by, relates to, duplicates, etc.)
model TicketLink {
  id       String   @id @default(cuid())
  linkType LinkType

  fromTicketId String
  fromTicket   Ticket @relation("LinkedFrom", fields: [fromTicketId], references: [id], onDelete: Cascade)
  toTicketId   String
  toTicket     Ticket @relation("LinkedTo", fields: [toTicketId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([fromTicketId, toTicketId, linkType])
  @@index([fromTicketId])
  @@index([toTicketId])
}

// Edit history for tickets
model TicketEdit {
  id        String   @id @default(cuid())
  field     String   // Which field was changed
  oldValue  String?  // Previous value (JSON stringified if complex)
  newValue  String?  // New value
  createdAt DateTime @default(now())

  ticketId String
  ticket   Ticket @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  userId   String
  user     User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([ticketId])
  @@index([createdAt])
}

// Comprehensive audit trail for ticket changes
model TicketActivity {
  id        String   @id @default(cuid())
  ticketId  String
  ticket    Ticket   @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  userId    String?
  user      User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  action    String   // created, updated, moved, assigned, labeled, sprint_changed, commented, etc.
  field     String?  // which field changed (for updates)
  oldValue  String?  // previous value (stringified)
  newValue  String?  // new value (stringified)
  groupId   String?  // groups related changes (e.g., drag-move updates column + order)
  createdAt DateTime @default(now())

  @@index([ticketId, createdAt])
  @@index([userId])
  @@index([groupId])
}

model Label {
  id        String  @id @default(cuid())
  name      String
  color     String
  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  tickets Ticket[]

  @@unique([projectId, name])
  @@index([projectId])
}

model Comment {
  id        String   @id @default(cuid())
  content   String   // Markdown content
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Track system-generated comments (e.g., MCP context logs)
  isSystemGenerated Boolean @default(false)
  source            String? // Optional source identifier (e.g., "mcp", "automation")

  ticketId String
  ticket   Ticket @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  authorId String
  author   User   @relation(fields: [authorId], references: [id], onDelete: Cascade)

  @@index([ticketId])
}

model Attachment {
  id        String   @id @default(cuid())
  filename  String
  mimeType  String
  size      Int      // File size in bytes
  url       String   // Storage path or URL
  createdAt DateTime @default(now())

  ticketId String
  ticket   Ticket @relation(fields: [ticketId], references: [id], onDelete: Cascade)

  // Track who uploaded the attachment for ownership-based permission checks
  uploaderId String?
  uploader   User?  @relation("Uploader", fields: [uploaderId], references: [id], onDelete: SetNull)

  @@index([ticketId])
  @@index([uploaderId])
}

// Track which sprints a ticket has been in for historical reporting
model TicketSprintHistory {
  id        String   @id @default(cuid())
  ticketId  String
  ticket    Ticket   @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  sprintId  String
  sprint    Sprint   @relation(fields: [sprintId], references: [id], onDelete: Cascade)

  addedAt   DateTime @default(now())
  removedAt DateTime?

  entryType       SprintEntryType   @default(added)
  exitStatus      SprintExitStatus?

  carriedFromSprintId String?

  @@unique([ticketId, sprintId])
  @@index([ticketId])
  @@index([sprintId])
}

// Project-level sprint configuration
model ProjectSprintSettings {
  id                      String  @id @default(cuid())
  projectId               String  @unique
  project                 Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  defaultSprintDuration   Int     @default(14) // days
  autoCarryOverIncomplete Boolean @default(true)
  doneColumnIds           Json    @default("[]") // JSON array

  // Default times for sprint start/end (HH:mm format, e.g., "09:00")
  defaultStartTime        String  @default("09:00")
  defaultEndTime          String  @default("17:00")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// System-wide settings for file upload limits (singleton)
model SystemSettings {
  id        String   @id @default("system-settings")
  updatedAt DateTime @updatedAt
  updatedBy String?

  // Branding settings
  appName          String  @default("PUNT")
  logoUrl          String? // URL to uploaded logo image
  logoLetter       String  @default("P")
  logoGradientFrom String  @default("#f59e0b")
  logoGradientTo   String  @default("#ea580c")

  // File upload limits (in MB)
  maxImageSizeMB          Int @default(10)
  maxVideoSizeMB          Int @default(100)
  maxDocumentSizeMB       Int @default(25)
  maxAttachmentsPerTicket Int @default(20)

  // Allowed MIME types (native JSON arrays)
  allowedImageTypes    Json @default("[\"image/jpeg\",\"image/png\",\"image/gif\",\"image/webp\"]")
  allowedVideoTypes    Json @default("[\"video/mp4\",\"video/webm\",\"video/ogg\",\"video/quicktime\"]")
  allowedDocumentTypes Json @default("[\"application/pdf\",\"application/msword\",\"application/vnd.openxmlformats-officedocument.wordprocessingml.document\",\"application/vnd.ms-excel\",\"application/vnd.openxmlformats-officedocument.spreadsheetml.sheet\",\"text/plain\",\"text/csv\"]")

  // Email provider configuration
  emailEnabled     Boolean @default(false)
  emailProvider    String  @default("none") // none, smtp, resend, console
  emailFromAddress String  @default("")
  emailFromName    String  @default("PUNT")

  // SMTP settings (password stored in env var EMAIL_SMTP_PASSWORD)
  smtpHost     String  @default("")
  smtpPort     Int     @default(587)
  smtpUsername String  @default("")
  smtpSecure   Boolean @default(true)

  // Email feature toggles
  emailPasswordReset Boolean @default(true)
  emailWelcome       Boolean @default(false)
  emailVerification  Boolean @default(false)
  emailInvitations   Boolean @default(true)

  // Board settings
  showAddColumnButton Boolean @default(true)

  // Default role permissions for new projects (JSON object)
  // Keys: "Owner", "Admin", "Member", "Viewer"
  // Values: array of permission strings
  defaultRolePermissions Json?

  // Repository configuration (global defaults)
  canonicalRepoUrl     String? // Upstream repository URL (e.g., https://github.com/owner/repo)
  repoHostingProvider  String? // github, gitlab, bitbucket, gitea, codeberg, other
  forkRepoUrl          String? // Fork repository URL (if different from canonical)

  // Agent configuration (global defaults)
  defaultBranchTemplate   String  @default("{type}/{key}-{slug}") // Default branch naming template
  defaultAgentGuidance    String? // Default Markdown instructions for AI agents

  // Default sprint times (system-wide defaults for new projects)
  defaultSprintStartTime  String  @default("09:00") // HH:mm format
  defaultSprintEndTime    String  @default("17:00") // HH:mm format
}

// Password reset tokens (for forgot password flow)
model PasswordResetToken {
  id        String    @id @default(cuid())
  tokenHash String    @unique // SHA-256 hash of the token (never store plain token)
  userId    String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime  @default(now())

  @@index([userId])
  @@index([expiresAt])
}

// Email verification tokens
model EmailVerificationToken {
  id        String   @id @default(cuid())
  tokenHash String   @unique // SHA-256 hash of the token
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  email     String   // Email being verified (may differ from current user email)
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([userId])
}

// Chat session for storing conversation history
model ChatSession {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Owner
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Optional project context (for project-scoped conversations)
  projectId String?
  project   Project? @relation(fields: [projectId], references: [id], onDelete: SetNull)

  messages ChatMessage[]

  @@index([userId])
  @@index([projectId])
  @@index([userId, updatedAt])
}

// Individual chat messages within a session
model ChatMessage {
  id        String   @id @default(cuid())
  role      String // "user" | "assistant"
  content   String
  metadata  Json?  // JSON: tool calls, errors, etc.
  createdAt DateTime @default(now())

  sessionId String
  session   ChatSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@index([sessionId])
  @@index([sessionId, createdAt])
}
